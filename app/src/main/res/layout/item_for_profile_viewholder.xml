<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_marginVertical="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/profile_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">


                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/profileimage" />

                <TextView
                    android:id="@+id/profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:text="resume"
                    android:textColor="#636262"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/profile_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_title"
                    android:layout_toRightOf="@+id/profile_image"
                    android:text="23n2323"
                    android:textColor="#989898"
                    android:textSize="13dp" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/profile_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_upper"
                android:layout_alignParentStart="true"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/profileview" />

            <ImageButton
                android:id="@+id/profile_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_upper"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/profile_view"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/profiledelete" />

            <ImageButton
                android:id="@+id/profile_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_upper"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@+id/profile_delete"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/profileedit" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>